pipeline {
    agent any
    tools{
        maven 'M3_8_6'

    }

    stages {
        


        stage('Compila') {
            steps {
                dir("Servicios/curso-microservicios"){


                sh "docker build -t microservicio ."

                }
               
            }
        }
        /*stage('DBDeploy') {
            steps {
                sh "docker images"
            }

        }*/

        stage('Push Image') {
            steps {
                withCredentials([[$class: 'UsernamePasswordMultiBinding', credentialsId: 'docker_nexus', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD']]) {
                    sh 'docker login 10.204.54.89:8083 -u $USERNAME -p $PASSWORD'
                    sh 'docker tag microservicio:latest 10.204.54.89:8083/repository/docker-private/microservicio:latest'
                    sh 'docker push 10.204.54.89:8083/repository/docker-private/microservicio:latest'  
                }
            }
        }
    }
}